<!DOCTYPE HTML>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>RoninTeam</title>
    
    <link rel="stylesheet" type="text/css" href="/css/roninteam.css" media="all">
    <link rel="stylesheet" type="text/css" href="/css/jquery-ui.css" media="screen">
    
    <script charset="utf-8" type="text/javascript">
      var roninteam_user = '<%= session[:username] || nil %>'
      var roninteam_agent = '<%= session[:agent] || nil %>'
      var roninteam_lang = '<%= session[:lang] || nil %>'
      var roninteam_addr = '<%= session[:ipaddr] || nil %>'
      var roninteam_server = "<%= env['HTTP_HOST'] %>"
    </script>
    
  </head>
  
  <body>
  
  <div id='header'>
    <div class='logo'></div>
    <div class='clouds'></div>
  </div>
  
  <div id="wrapper">
    
    <%= yield %>
    
  </div>
  
  <div class='watermark'></div>
  
  <script type="text/javascript" src="/js/faye.js"></script>
  <script type="text/javascript" src="/js/jquery.js"></script>
  <script type="text/javascript" src="/js/jquery-ui.js"></script>
  <script type="text/javascript" src="/js/jquery.livequery.js"></script>
  <script type="text/javascript" src="/js/jquery.tipsy.js"></script>
  <script type="text/javascript" src="/js/scrollto.js"></script>
  <script type="text/javascript" src="/js/Datejs.js"></script>
  <script type="text/javascript" src="/js/growl.js"></script>
  <script type="text/javascript" src="/js/roninteam.js"></script>
    
  <script type="text/javascript">
  <% flash.each do |category,message| %>
    RoninTeam.flashMessage(<%=json category %>, <%=json message %>);
  <% end %>
  </script>
  <% flash.clear %>

  <%= erb(:notifications, :layout => false) %>

  </body>
  
</html>
